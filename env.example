# Database
DATABASE_URL="postgresql://username:password@localhost:5432/harviz_co_db?schema=public"
# For local development with SQLite:
# DATABASE_URL="file:./dev.db"

# Database credentials for Docker
POSTGRES_DB="harviz_co"
POSTGRES_USER="harviz_co"
POSTGRES_PASSWORD="your-secure-database-password"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# CSRF Protection
CSRF_SECRET_KEY="your-csrf-secret-key-change-in-production"

# Email (for magic links)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@harvizco.com"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# File Upload (for product images)
UPLOAD_DIR="./public/uploads"

# App Settings
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Harviz & Co"

# Monitoring
GRAFANA_ADMIN_PASSWORD="your-secure-grafana-password"

# Redis (for rate limiting and caching)
REDIS_URL="redis://localhost:6379"

# Development
ENABLE_DEV_AUTH="false"

