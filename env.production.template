# Production Environment Configuration Template
# Copy this file to .env.production and update with your production values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Use PostgreSQL for production (recommended)
DATABASE_URL="postgresql://username:password@localhost:5432/tiny_tastes_production?schema=public&sslmode=require"

# Database credentials for Docker/Production
POSTGRES_DB="tiny_tastes_production"
POSTGRES_USER="tinytastes_user"
POSTGRES_PASSWORD="your-super-secure-database-password-here"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# NextAuth Configuration
NEXTAUTH_URL="https://tinytastes.co.za"
NEXTAUTH_SECRET="your-cryptographically-secure-secret-key-minimum-32-characters"

# CSRF Protection
CSRF_SECRET_KEY="your-csrf-secret-key-change-in-production"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email service for magic links and notifications
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-production-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-specific-password"
EMAIL_FROM="noreply@tinytastes.co.za"

# Alternative email services (uncomment and configure as needed)
# EMAIL_SERVER_HOST="smtp.sendgrid.net"
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER="apikey"
# EMAIL_SERVER_PASSWORD="your-sendgrid-api-key"

# EMAIL_SERVER_HOST="email-smtp.us-east-1.amazonaws.com"
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER="your-ses-smtp-username"
# EMAIL_SERVER_PASSWORD="your-ses-smtp-password"

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
# Google OAuth for social login
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# File upload directory (ensure this directory exists and is writable)
UPLOAD_DIR="/app/uploads"

# Alternative: Cloud storage (uncomment and configure as needed)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="tinytastes-uploads"

# CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
# CLOUDINARY_API_KEY="your-cloudinary-api-key"
# CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis for caching and rate limiting
REDIS_URL="redis://username:password@your-redis-host:6379"
REDIS_PASSWORD="your-redis-password"

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Application URLs
NEXT_PUBLIC_APP_URL="https://tinytastes.co.za"
NEXT_PUBLIC_APP_NAME="Tiny Tastes"

# Environment
NODE_ENV="production"

# Disable development features
ENABLE_DEV_AUTH="false"

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL="info"

# Monitoring (uncomment and configure as needed)
# SENTRY_DSN="your-sentry-dsn"
# DATADOG_API_KEY="your-datadog-api-key"
# NEW_RELIC_LICENSE_KEY="your-newrelic-license-key"

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# Payment gateway configuration (uncomment and configure as needed)
# PAYFAST_MERCHANT_ID="your-payfast-merchant-id"
# PAYFAST_MERCHANT_KEY="your-payfast-merchant-key"
# PAYFAST_PASSPHRASE="your-payfast-passphrase"
# PAYFAST_SANDBOX="false"

# STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
# STRIPE_SECRET_KEY="your-stripe-secret-key"
# STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Rate limiting settings
RATE_LIMIT_REDIS_URL="redis://username:password@your-redis-host:6379"

# Security headers
CSP_REPORT_URI="https://tinytastes.co.za/api/csp-violation"

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Backup configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET="tinytastes-backups"

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================
# CDN configuration
CDN_URL="https://cdn.tinytastes.co.za"

# Image optimization
IMAGE_OPTIMIZATION_URL="https://tinytastes.co.za"

# =============================================================================
# BUSINESS SETTINGS
# =============================================================================
# Business hours (24-hour format)
BUSINESS_START_HOUR=8
BUSINESS_END_HOUR=17
BUSINESS_TIMEZONE="Africa/Johannesburg"

# Delivery settings
DELIVERY_RADIUS_KM=50
MIN_ORDER_AMOUNT=100
DELIVERY_FEE=25

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Email notifications
NOTIFY_ORDER_CONFIRMATION="true"
NOTIFY_ORDER_SHIPPED="true"
NOTIFY_ORDER_DELIVERED="true"
NOTIFY_PAYMENT_RECEIVED="true"

# SMS notifications (uncomment and configure as needed)
# TWILIO_ACCOUNT_SID="your-twilio-account-sid"
# TWILIO_AUTH_TOKEN="your-twilio-auth-token"
# TWILIO_PHONE_NUMBER="your-twilio-phone-number"

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Facebook Pixel
NEXT_PUBLIC_FB_PIXEL_ID="your-facebook-pixel-id"

# =============================================================================
# DEVELOPMENT OVERRIDES (DO NOT USE IN PRODUCTION)
# =============================================================================
# These should be commented out or removed in production
# ENABLE_DEV_AUTH="true"
# LOG_LEVEL="debug"
