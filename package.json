{
  "name": "harviz-co",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 5000 -H 0.0.0.0",
    "dev:3000": "next dev",
    "build": "next build",
    "start": "next start -p 5000",
    "start:3000": "next start",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "boot": "node scripts/boot-sequence.js",
    "boot:local": "npm run db:generate && npm run db:push && npm run db:seed && npm run dev",
    "boot:docker": "docker-compose up --build",
    "boot:production": "npm run build && npm run start",
    "start:local": "bash scripts/start.sh local",
    "start:docker": "bash scripts/start.sh docker",
    "start:production": "bash scripts/start.sh production",
    "start:dev": "bash scripts/start.sh dev",
    "health": "curl -f http://localhost:5000/api/health || echo 'Health check failed'",
    "setup": "npm install && npm run db:generate && npm run db:push && npm run db:seed",
    "analyze": "ANALYZE=true npm run build",
    "perf:audit": "npm run build && npm run start & sleep 5 && lighthouse http://localhost:5000 --output=html --output-path=./lighthouse-report.html --chrome-flags='--headless' && kill %1",
    "perf:test": "npm run build && npm run start & sleep 5 && curl -w '@scripts/curl-format.txt' -o /dev/null -s http://localhost:5000 && kill %1",
    "test:admin": "node scripts/test-admin-login.js",
    "test:email": "node scripts/test-email.js"
  },
